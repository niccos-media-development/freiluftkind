<div class="freiluftkind_timer">
  
  {% if section.settings.text != blank %}
    <div class="flk_timer_text">
      {{ section.settings.text }}
    </div>
  {% endif %}
  
  <div id="flk_timer" style="
    border: solid 1px;
    color: {{ section.settings.text_color }};
    border-radius: 50px;
    width: fit-content;
    padding: 0px 10px; 
    font-weight: 600; 
    margin-left: auto;
    margin-right: auto;
  ">00:00:00</div>
  
</div>

<script>
  function updateTimer() {
    const now = new Date();
    const midnight = new Date();
    midnight.setHours(24, 0, 0, 0);

    const diff = midnight - now;

    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    document.getElementById("flk_timer").innerHTML = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

    if (diff > 0) {
        setTimeout(updateTimer, 1000);
    }
  }
  updateTimer();
</script>

<style>
  .freiluftkind_timer {
    background: {{ section.settings.background }};
    padding: 20px 0px;
    font-size: 20px;
  }

  .flk_timer_text {
    text-transform: uppercase;
    text-align: center;
    font-size: 14px;
  }

  @media screen and (min-width: 700px) {
    .freiluftkind_timer {
      font-size: 24px;
    }

    .flk_timer_text {
      font-size: 18px;
    }
  }
</style>

{% schema %}
{
  "name": "Freiluftkind Timer",
  "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Freiluftkind Timer"
    }
  ]
}
{% endschema %}
